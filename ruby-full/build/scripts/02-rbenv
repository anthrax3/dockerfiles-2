#! /bin/sh

set -e
set -x
export DEBIAN_FRONTEND=noninteractive

## run rbenv-update
bash -l -c "rbenv update"

## install subversion to build ruby 1.8.7-p375 (requires svn commands)
#apt-get install --no-install-recommends -y subversion

## install pre-build binary (see https://github.com/minimum2scp/ruby-binary)
ruby_binary_release=v0.0.1
for v in 2.0.0-p643 2.1.5 2.2.0; do
  file=/build/tmp/opt-rbenv-ruby-${v}.tar.gz
  curl -L -s -o $file https://github.com/minimum2scp/ruby-binary/releases/download/${ruby_binary_release}/${file##*/}
  tar xf $file -C /opt/rbenv/versions
done

bash -l -c "rbenv rehash"
