#bash -l -c "rbenv install 1.8.7-p375"
#bash -l -c "rbenv install 1.9.3-p551"
bash -l -c "rbenv install 2.0.0-p598"
bash -l -c "rbenv install 2.1.5"
bash -l -c "rbenv install 2.2.0-preview2"

bash -l -c "rbenv rehash"
