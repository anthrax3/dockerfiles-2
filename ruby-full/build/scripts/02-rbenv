#! /bin/bash

set -e
set -x
export DEBIAN_FRONTEND=noninteractive

## enable rbenv
. /etc/profile.d/rbenv.sh

## run rbenv-update
rbenv update

## install subversion to build ruby 1.8.7-p375 (requires svn commands)
#apt-get install --no-install-recommends -y subversion

## build ruby 2.2.0-preview1 with jemalloc
apt-get install libjemalloc1 libjemalloc-dev

## build rubies
#rbenv install 1.8.7-p375
#rbenv install 1.9.3-p551
rbenv install 2.0.0-p598
rbenv install 2.1.5
## NOTE: ruby-build does not set --with-jemalloc
RUBY_CONFIGURE_OPTS=--with-jemalloc rbenv install 2.2.0-preview1

