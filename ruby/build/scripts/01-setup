#! /bin/sh

set -e
set -x
export DEBIAN_FRONTEND=noninteractive

## install ruby2.1
apt-get install --no-install-recommends -y ruby ruby-dev bundler rake pry

## install build tools
apt-get install --no-install-recommends -y build-essential autoconf bison ca-certificates libgdbm-dev libncursesw5-dev libncurses5-dev libreadline6-dev tcl-dev tk-dev zlib1g-dev libssl-dev libffi-dev libyaml-dev libgmp-dev

## install mruby
apt-get install --no-install-recommends -y mruby
